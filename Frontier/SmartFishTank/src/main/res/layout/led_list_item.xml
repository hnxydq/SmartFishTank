<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:descendantFocusability="blocksDescendants"
    >

    <CheckBox
        android:id="@+id/led_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/magin_2dp"
        android:duplicateParentState="true"
        android:focusable="false"
        android:enabled="false"
        />

    <ImageView
        android:id="@+id/iv_bulb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_bulb"
        android:layout_toRightOf="@id/led_cb"
        android:layout_centerVertical="true"
        android:layout_marginLeft="-3dp"
        />

    <TextView
        android:id="@+id/tv_ip_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_bulb"
        android:layout_marginLeft="@dimen/magin_8dp"
        android:text="192.168.0.99"
        android:textSize="@dimen/text_size_16"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/tv_led_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_ip_address"
        android:layout_marginLeft="@dimen/magin_10dp"
        android:text="SANRISE-C338"
        android:textSize="@dimen/text_size_16"
        android:layout_centerVertical="true"
        />

    <ImageView
        android:id="@+id/iv_led_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_delete"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/magin_10dp"
        android:padding="@dimen/magin_2dp"
        />

</RelativeLayout>