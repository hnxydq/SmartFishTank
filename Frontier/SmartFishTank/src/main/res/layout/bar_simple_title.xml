<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="54dp"
    android:id="@+id/bar_title"
    android:background="@color/titleBarBg"
    android:gravity="center">

    <ImageView
        android:id="@+id/title_back"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/ic_back_selector"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:clickable="true"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/title_main_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/title_photo"
        android:layout_toLeftOf="@id/title_main_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/photo"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_margin="5dp"
        android:layout_centerVertical="true"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/title_video"
        android:layout_toRightOf="@id/title_main_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/video"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_centerVertical="true"
        android:visibility="invisible"
        />

    <ImageView
        android:id="@+id/title_setting"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginRight="8dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_setting_selector"
        android:layout_alignParentRight="true"
        android:visibility="invisible"
        />
</RelativeLayout>
