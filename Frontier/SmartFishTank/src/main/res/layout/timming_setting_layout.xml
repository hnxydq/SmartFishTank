<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/bar_simple_title" />

    <RelativeLayout
        android:id="@+id/edit_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_add_line"
            android:layout_width="48dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/magin_5dp"
            android:src="@drawable/btn_add_line_selector" />

        <ImageView
            android:id="@+id/iv_preview"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_preview_selector" />

        <ImageView
            android:id="@+id/iv_delete_line"
            android:layout_width="48dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/magin_5dp"
            android:src="@drawable/btn_dec_line_selector" />
    </RelativeLayout>


    <com.jjoe64.graphview.GraphView
        android:id="@+id/graph"
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:layout_marginBottom="5dp" />


    <RelativeLayout
        android:id="@+id/t1_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:visibility="visible">

        <Button
            android:id="@+id/btn_t5_1"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_iv_selector"
            android:gravity="center"
            android:text="T5①" />

        <View
            android:id="@+id/t5_1_1"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/magin_15dp"
            android:layout_marginRight="@dimen/magin_15dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/btn_t5_1"
            android:background="@color/line_color"
            />

        <View
            android:id="@+id/t5_1_2"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/magin_15dp"
            android:layout_marginRight="@dimen/magin_15dp"
            android:layout_marginBottom="15dp"
            android:layout_toRightOf="@id/btn_t5_1"
            android:background="@color/line_color"
            />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/t2_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:visibility="visible">

        <Button
            android:id="@+id/btn_t5_2"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_iv_selector"
            android:gravity="center"
            android:text="T5②" />

        <View
            android:id="@+id/t5_2_1"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/magin_15dp"
            android:layout_marginRight="@dimen/magin_15dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/btn_t5_2"
            android:background="@color/line_color"
            />

        <View
            android:id="@+id/t5_2_2"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/magin_15dp"
            android:layout_marginRight="@dimen/magin_15dp"
            android:layout_marginBottom="15dp"
            android:layout_toRightOf="@id/btn_t5_2"
            android:background="@color/line_color"
            />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/t3_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="@dimen/magin_2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="visible">

        <Button
            android:id="@+id/btn_t5_3"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_iv_selector"
            android:gravity="center"
            android:text="T5③" />

        <View
            android:id="@+id/t5_3_1"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/magin_15dp"
            android:layout_marginRight="@dimen/magin_15dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/btn_t5_3"
            android:background="@color/line_color"
            />

        <View
            android:id="@+id/t5_3_2"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/magin_15dp"
            android:layout_marginRight="@dimen/magin_15dp"
            android:layout_marginBottom="15dp"
            android:layout_toRightOf="@+id/btn_t5_3"
            android:background="@color/line_color"
            />
    </RelativeLayout>

    <ListView
        android:id="@+id/timming_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1" />
</LinearLayout>